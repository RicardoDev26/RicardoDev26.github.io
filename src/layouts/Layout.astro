---
import Headers from "../components/Headers.astro";
import '@fontsource-variable/onest';
import Footer from "../components/Footer.astro"
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Ricardo | Portfolio</title>
  </head>
  <body class="relative min-h-screen bg-slate-950">
    <div 
      class="fixed inset-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px] 
      [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)] z-0 pointer-events-none">
    </div>
    
    <!-- Contenido principal -->
    <div class="relative z-10 flex flex-col items-center px-10">
      <Headers />
      <slot />
	  <Footer />
    </div>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }

  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    height: 100%;
	scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
    min-height: 100%;
    position: relative;

  }

  @media (prefers-reduced-motion: reduce) {
	html {
		scroll-behavior: auto;
	}
  }

  .relative {
    position: relative;
  }

  .fixed {
    position: fixed;
  }

  .inset-0 {
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }
</style>
